= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .field
    = f.label :feed_url, "GitHub RSS Feed Url"
    = f.text_field :feed_url
    %p.explanation 
      You can get the RSS feed from your dashboard:
      = image_tag "feed.png"
  .actions
    = f.submit 'Save'
